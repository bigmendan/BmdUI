<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  MultiStateView  -->
    <declare-styleable name="MultiStateView">
        <attr format="reference" name="msv_loadingView"/>
        <attr format="reference" name="msv_emptyView"/>
        <attr format="reference" name="msv_errorView"/>
        <attr format="enum" name="msv_viewState">
            <enum name="content" value="0"/>
            <enum name="error" value="1"/>
            <enum name="empty" value="2"/>
            <enum name="loading" value="3"/>
        </attr>
        <attr format="boolean" name="msv_animateViewChanges"/>
    </declare-styleable>


    <!--   ActionBar -->
    <declare-styleable name="BmdActionBar">
        <attr name="ab_immersion" format="enum">
            <enum name="unchanged" value="0"/>
            <enum name="ordinary" value="1"/>
            <enum name="immersed" value="2"/>
        </attr>

        <!--    actionBar    -->
        <attr name="ab_backgroundLayerLayout" format="reference"/>
        <attr name="ab_backgroundLayerImageRes" format="reference"/>


        <!--   StatusBar 显示状态   -->
        <attr name="ab_statusBarVisible" format="enum">
            <enum name="auto" value="0"/>
            <enum name="visible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="ab_statusBarColor" format="color|reference"/>

        <!--    StatusBar状态    -->
        <attr name="ab_statusBarMode" format="enum">
            <enum name="unchanged" value="0"/>
            <enum name="light" value="1"/>
            <enum name="dark" value="2"/>
            <enum name="auto" value="3"/>
            <enum name="realTime" value="4"/>
        </attr>

        <attr name="ab_clickToFinish" format="reference"/>
        <attr name="ab_titleBarLayout" format="reference"/>
        <attr name="ab_titleBarHeight" format="dimension|reference"/>
        <attr name="ab_bottomLineHeight" format="dimension|reference"/>
        <attr name="ab_bottomLineColor" format="color|reference"/>
        <attr name="ab_bottomLineResId" format="reference"/>
        <attr name="ab_bottomLineOutside" format="boolean|reference"/>
        <attr name="ab_foregroundLayerLayout" format="reference"/>


    </declare-styleable>


    <!--    ActionBarCommon的自定义属性 -->
    <declare-styleable name="ActionBarCommon">
        <attr name="abc_leftIconClickToFinish" format="boolean|reference"/>
        <attr name="abc_leftTextClickToFinish" format="boolean|reference"/>
        <attr name="abc_leftIconRes" format="reference"/>
        <attr name="abc_leftIconColor" format="reference|color"/>
        <attr name="abc_leftIconPaddingLeft" format="reference|dimension"/>
        <attr name="abc_leftIconPaddingRight" format="reference|dimension"/>
        <attr name="abc_leftIconPaddingTop" format="reference|dimension"/>
        <attr name="abc_leftIconPaddingBottom" format="reference|dimension"/>
        <attr name="abc_leftText" format="string|reference"/>
        <attr name="abc_leftTextColor" format="string|reference"/>
        <attr name="abc_leftTextSize" format="reference|dimension"/>
        <attr name="abc_leftTextPaddingLeft" format="reference|dimension"/>
        <attr name="abc_leftTextPaddingRight" format="reference|dimension"/>
        <attr name="abc_leftTextPaddingTop" format="reference|dimension"/>
        <attr name="abc_leftTextPaddingBottom" format="reference|dimension"/>
        <attr name="abc_TitleSize" format="reference|dimension"/>
        <attr name="abc_TitleColor" format="reference|color"/>
        <attr name="abc_Title" format="string|reference"/>
        <attr name="abc_rightIconRes" format="reference"/>
        <attr name="abc_rightIconColor" format="reference|color"/>
        <attr name="abc_rightIconPaddingLeft" format="reference|dimension"/>
        <attr name="abc_rightIconPaddingRight" format="reference|dimension"/>
        <attr name="abc_rightIconPaddingTop" format="reference|dimension"/>
        <attr name="abc_rightIconPaddingBottom" format="reference|dimension"/>
        <attr name="abc_rightText" format="string|reference"/>
        <attr name="abc_rightTextColor" format="string|reference"/>
        <attr name="abc_rightTextSize" format="reference|dimension"/>
        <attr name="abc_rightTextPaddingLeft" format="reference|dimension"/>
        <attr name="abc_rightTextPaddingRight" format="reference|dimension"/>
        <attr name="abc_rightTextPaddingTop" format="reference|dimension"/>
        <attr name="abc_rightTextPaddingBottom" format="reference|dimension"/>

    </declare-styleable>
</resources>